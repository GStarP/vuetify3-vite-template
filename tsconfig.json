{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["vuetify"],
    "paths": {
      "@/*": ["app/*"]
    },
    "strict": true,
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.d.ts",
    "app/**/*.tsx",
    "app/**/*.vue",
    "vite.config.ts",
    "configs/*.json"
  ]
}
